{
  "compilerOptions": {
    "rootDir": "src",
    "noImplicitAny": true,
    "sourceMap": false,
    "module": "esnext",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "importHelpers": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    // "declarationDir": "dist/types",
    "outFile": "index.d.ts",
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist/",
    "develop/",
  ]
}
