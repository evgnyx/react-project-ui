{
  "compilerOptions": {
    "rootDir": "src",
    "noImplicitAny": true,
    "sourceMap": false,
    "module": "esnext",
    "target": "es5",
    "jsx": "preserve",
    "allowJs": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "importHelpers": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationDir": "dist",
  },
  "include": [
    "./src/**/*",
  ],
  "exclude": [
    "node_modules",
    "dist/",
    "develop/",
  ]
}
